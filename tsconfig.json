{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/graphql": ["src/graphql"],
      "@/graphql/graphql": ["src/graphql/graphql"],
      "@/cms": ["src/cms"],
      "@/components/*": ["src/components/*"],
      "@/fonts": ["fonts"],
      "@/hooks/*": ["src/hooks/*"],
      "@/timvir/*": ["src/timvir/*"],
      "@/theme": ["src/theme"],
      "@/tokens.stylex": ["src/tokens.stylex"]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.md", "**/*.mdx", ".next/types/**/*.ts"]
}
