{
  "files": {
    "includes": ["**", "!**/.direnv", "!**/.next", "!**/node_modules", "!src/graphql/generated"]
  },

  "formatter": {
    "indentStyle": "space",
    "lineWidth": 120
  },

  "linter": {
    "rules": {
      "style": {
        "useImportType": "off",
        "noUselessElse": "off"
      },
      "a11y": {
        "noStaticElementInteractions": "off",
        "useKeyWithClickEvents": "off"
      }
    }
  }
}
