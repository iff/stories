{
  "files": {
    "ignore": [".direnv", ".next", "node_modules"]
  },

  "formatter": {
    "indentStyle": "space",
    "lineWidth": 120
  },

  "linter": {
    "rules": {
      "style": {
        "useImportType": "off",
        "noUselessElse": "off"
      },
      "a11y": {
        "useKeyWithClickEvents": "off",
        "useMediaCaption": "off",
        "noSvgWithoutTitle": "off"
      }
    }
  }
}
